
<h1 class="text-center mt-4 mb-4">Buyers</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th>Address</th>
      <th>Product</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @buyproducts.each do |p| %>
    <tr>
      <td><%= p.fname %></td>
      <td><%= p.dob %></td>
      <td><%= p.city %></td> 
      <td><%= p.productname %></td> 
      <td><%= p.price %> </td> 
    </tr>
    <% end %>
  </tbody>
</table>
