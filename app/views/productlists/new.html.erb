<h1 class="text-center mt-4 mb-4">Sell Your Product</h1>

  <%= form_with model: @productlist do |form| %>
  <div class="row g-3">
    <div class="col-md-3">
      <%= form.label :sellerName ,class:"form-label"%><br>
      <%= form.text_field :sellerName , class:"form-control"%>
    </div>
    <div class="col-md-3">
      <div class="form-label" ><%= form.label :productName %><br></div>
      <%= form.text_field :prodcutName , class:"form-control"%>
    </div>
    <div class="col-md-3">
      <div class="form-label" ><%= form.label :price %><br></div>
      <%= form.text_field :price , class:"form-control"%>
    </div>
    <div class="col-md-3">
      <div class="form-label" ><%= form.label :category %><br></div>
      <%= form.text_field :category , class:"form-control"%>
    </div>
    <div class="col-12">
      <div class="form-label" ><%= form.submit %></div>
    </div>
  </div>
  <% end %>

